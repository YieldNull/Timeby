<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/login_bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/login_top"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_login_logo" />

            <EditText
                android:id="@+id/editText_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_login_user_bgd"
                android:hint="@string/login_user_hint"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_text"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/login_bottom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@drawable/img_login_password_bdg"
                android:ellipsize="start"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:paddingBottom="25dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_text"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_login_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_login_submit"
                android:padding="10dp"
                android:text="@string/login_btn_submit"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView_login_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:text="@string/login_reset"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/login_text_btn"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="@string/login_register"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/login_text_btn"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>