<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bgd"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/AppTheme.Widget.TextView"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:gravity="center_vertical"
            android:text=" 事 件"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/btn_pw"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.20"
            android:background="@drawable/selector_sinner"
            android:gravity="center_vertical"
            android:textColor="@color/login_text"
            android:textSize="20sp"
            android:paddingLeft="20dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.15" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Concentration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="专注度"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Efficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="效  率"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/ConcentrationsB"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/EfficiencysB"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ConcentrationPer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%" />

            <TextView
                android:id="@+id/EfficiencyPer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="0%" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/cCancell"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/btn_conclude_bgd"
            android:text="放  弃"
            android:textColor="@color/main_bgd"
            android:textSize="20sp" />


        <Button
            android:id="@+id/cEnsure"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_conclude_bgd"
            android:text="确  认"
            android:textColor="@color/main_bgd"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
