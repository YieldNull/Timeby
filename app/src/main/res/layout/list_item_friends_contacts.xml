<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/friends_select"
    android:padding="10dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView_friends_headimg"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_friends_headimg_default" />

    <TextView
        android:id="@+id/textView_friends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/imageView_friends_headimg"
        android:singleLine="true"
        android:text="喝酒还"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="22dp" />

    <CheckBox
        android:id="@+id/checkBox_friends_list_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />


