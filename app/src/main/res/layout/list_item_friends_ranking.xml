<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/friends_select"
    android:padding="10dp">


    <TextView
        android:id="@+id/textView_friends_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:text="喝酒还"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="22dp" />


    <ImageView
        android:id="@+id/imageView_friends_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/icn_user_shell" />

    <TextView
        android:id="@+id/textView_friends_rank_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/imageView_friends_rank"
        android:text="11"
        android:textSize="18sp" />


</RelativeLayout>
