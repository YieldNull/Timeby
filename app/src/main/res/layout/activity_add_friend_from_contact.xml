<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView_add_friends_from_contact_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_addfriend_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/add_friend_from_contact"
            android:textSize="24dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView_add_friends_from_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#ffffe3"
        android:divider="#FFF7F7F7"
        android:dividerHeight="2dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">

    </ListView>
</LinearLayout>
