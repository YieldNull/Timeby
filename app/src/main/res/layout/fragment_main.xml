<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bgd"
    android:fillViewport="true"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="开始"
            android:textColor="@color/main_time_hint"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView_main_start_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_main_time"
            android:text="03"
            android:textColor="@color/main_bgd"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_main_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/main_text_bgd"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView_main_start_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_time"
            android:text="24"
            android:textColor="@color/main_text"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_main_start_apm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_main_apm"
            android:text="AM"
            android:textColor="@color/main_bgd"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="结束"
            android:textColor="@color/main_time_hint"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView_main_end_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_main_time"
            android:text="03"
            android:textColor="@color/main_text"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_main_end_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/main_text_bgd"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView_main_end_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_time"
            android:text="24"
            android:textColor="@color/main_text"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView_main_end_apm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_main_apm"
            android:text="AM"
            android:textColor="@color/main_text"
            android:textSize="26sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/layout_main_dial"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageView_main_dial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_clock_dial" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageView_drawer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/main_bgd"
            android:src="@drawable/btn_drawer_toggle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_main_hint_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您共设定了"
            android:textColor="@color/main_text_hint"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_main_hint_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="00时00分"
            android:textColor="@color/main_text_hint"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_main_hint_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不玩手机哦～"
            android:textColor="@color/main_text_hint"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_main_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_main_submit"
        android:text="确  认"
        android:textColor="@color/main_text"
        android:textSize="24sp" />

</LinearLayout>

